@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="login-wrapper">
    <div class="login-container">
       
        <div class="login_form">
            <!-- Login form container -->
            <form id="account" method="post" class="login-form">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <!-- Login option for Apple -->
                <div class="login_option">
                    <div class="option">
                        <a href="#">
                            <img src="~/images/logo-3.png" alt="Apple" />
                        </a>
                    </div>
                </div>
             

                <!-- Login option separator -->
                <p class="separator">
                    <span>or</span>
                </p>

                <!-- Email input box -->
                <div class="input_box">
                    <label asp-for="Input.Email" for="email">Email or Username</label>
                    <input asp-for="Input.Email" id="email" class="form-control" placeholder="Enter email address" required autocomplete="username" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <!-- Password input box -->
                <div class="input_box">
                    <div class="password_title">
                        <label asp-for="Input.Password" for="password">Password</label>
                        <a asp-page="./ForgotPassword">Forgot Password?</a>
                    </div>
                    <input asp-for="Input.Password" id="password" class="form-control" type="password" placeholder="Enter your password" required autocomplete="current-password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <!-- Remember Me checkbox -->
                <div class="form-check mb-4">
                    <input class="form-check-input" asp-for="Input.RememberMe" id="rememberMe" />
                    <label class="form-check-label" for="rememberMe">
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>

                <!-- Login button -->
                <button id="login-submit" type="submit" class="btn btn-primary w-100 mb-3">Log In</button>

                <!-- Sign-up link -->
                <p class="sign_up">Don't have an account? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Sign up</a></p>

                <!-- Resend email confirmation link -->
                <p>
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-muted">Resend email confirmation</a>
                </p>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
